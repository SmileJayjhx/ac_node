<launch>

    <arg name="vehicle_type"  default="omv" />
    <arg name="vehicle_brand"   default="rebot"/>
    <arg name="can_rx_topic"   default="/can0_rx"/>
    <arg name="cmd_topic"   default="/servo_cmd"/>
    <node name="ac_node" pkg="ac_node"  type="ac_driver_manager" output="screen" respawn="false">
        <rosparam file="/opt/robot_data/vehicle_config/vehicle_mechanical_config.yaml" command="load"/>
        <param name="zero_point_calibration_enable" type="bool" value="true" />
        <param name="config_file_path" type="string" value="/opt/robot_data/vehicle_config/" />
        <rosparam file="/opt/robot_data/vehicle_config/ac_config.yaml" command="load"/>
        <rosparam file="/opt/robot_data/vehicle_config/servo_zero_point.yaml" command="load"/>
        <param name="vehicle_type"   value="$(arg vehicle_type)" />
        <param name="vehicle_brand"   value="$(arg vehicle_brand)" />
        <param name="can_rx_topic"   value="$(arg can_rx_topic)" />
        <param name="cmd_topic"   value="$(arg cmd_topic)" />
    </node>

</launch>
